#:kivy 2.2.1

<ProfileScreen>:

    # Badge for the status
    # CircleIconButton:
    #     source: root.user_status_image
    #     pos_hint: {"center_x":0.2, "center_y":0.775}
    #     size_hint: (None, 0.15)
    #     width: self.height
    #     exterior_color: root.primary_color
    #     release_function: root.open_badges

    Image:
        source: root.user_status_image
        pos_hint: {"center_x":0.2, "center_y":0.775}
        size_hint: (None, 0.15)
        width: self.height

    # Status and level
    Label:
        text: root.user_status
        font_name: PATH_TITLE_FONT
        font_size: 20 * root.font_ratio
        pos_hint: {"x":0.4, "center_y":0.85}
        size_hint: (0.25, 0.1)
        text_size: self.size
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
        halign: "left"
    Label:
        text: root.user_level
        font_name: PATH_TITLE_FONT
        font_size: 20 * root.font_ratio
        pos_hint: {"x":0.675, "center_y":0.85}
        size_hint: (0.25, 0.1)
        text_size: self.size
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
        halign: "right"

    # Experience counter
    ExperienceCounter:
        size_hint: (0.525, 0.07)
        pos_hint: {"x":0.4, "center_y":0.745}
        font_ratio: root.font_ratio
        experience_left: 10
        percentage_experience: 0.7
        theme_colors: root.theme_colors

    # Coins counter
    CoinsCounter:
        size_hint: (0.6, 0.07)
        pos_hint: {"center_x":0.5, "center_y":0.635}
        font_ratio: root.font_ratio
        coins_count: root.coins_count
        release_function: root.go_to_boosters

    # Classic mode achievements
    CustomContentButton:
        size_hint: (0.8,0.2)
        pos_hint: {"center_x":0.5, "center_y":0.475}
        font_ratio: root.font_ratio
        title: "Classic mode"
        content: root.classic_mode_achievements
        release_function: root.open_achievements_classic

    # Daily mode achievements
    CustomContentButton:
        size_hint: (0.8,0.2)
        pos_hint: {"center_x":0.5, "center_y":0.25}
        font_ratio: root.font_ratio
        title: "Daily mode"
        content: root.daily_mode_achievements
        release_function: root.open_achievements_daily
