#:kivy 2.2.1

<ProfileScreen>:
    Label:
        text: "Profile"
        font_name: PATH_TITLE_FONT
        font_size: TITLE_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.9}
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR

    BottomBar:
        size_hint: (1, BOTTOM_BAR_HEIGHT)
        pos_hint: {"bottom":0,"left":0}
        selected: "profile"

    # Badge for the status
    CircleIconButton:
        source: root.user_status_image
        pos_hint: {"center_x":0.2, "center_y":0.75}
        size_hint: (None, 0.15)
        width: self.height
        disable_button: True

    # Status and level
    Label:
        text: root.user_status
        font_name: PATH_TITLE_FONT
        font_size: 20 * root.font_ratio
        pos_hint: {"x":0.4, "center_y":0.825}
        size_hint: (0.25, 0.1)
        text_size: self.size
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
        halign: "left"
    Label:
        text: root.user_level
        font_name: PATH_TITLE_FONT
        font_size: 20 * root.font_ratio
        pos_hint: {"x":0.675, "center_y":0.825}
        size_hint: (0.25, 0.1)
        text_size: self.size
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
        halign: "right"

    # Experience counter
    ExperienceCounter:
        size_hint: (0.525, 0.07)
        pos_hint: {"x":0.4, "center_y":0.72}
        font_ratio: root.font_ratio
        experience_left: 10
        percentage_experience: 0.7
        theme_colors: root.theme_colors

    # Coins counter
    CoinsCounter:
        size_hint: (0.6, 0.07)
        pos_hint: {"center_x":0.5, "center_y":0.61}
        font_ratio: root.font_ratio
        coins_count: root.coins_count
        release_function: root.go_to_boosters
