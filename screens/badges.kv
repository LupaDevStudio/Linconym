#:kivy 2.2.1

<BadgesScreen>:

    # Badges scrollview
    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "center_y":0.45}
        size_hint: (0.98,0.65)
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color
        bar_width: 7*root.font_ratio

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing: 40*root.font_ratio
            padding: (0.05*root.width, 12*root.font_ratio, 0.05*root.width, 40*root.font_ratio)
