#:kivy 2.2.1

<QuestsScreen>:

    # Subtitle
    Label:
        text: root.current_act_name
        font_name: PATH_TITLE_FONT
        font_size: LABEL_FONT_SIZE * root.font_ratio
        pos_hint: {"x":0.1, "center_y":0.82}
        outline_width: BUTTON_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        text_size: self.size
        color: TEXT_FONT_COLOR
        halign: "left"
        valign: "center"

    # Quests scrollview
    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "center_y":0.45}
        size_hint: (0.98,0.65)
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color
        bar_width: 7*root.font_ratio

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing: 40*root.font_ratio
            padding: (0.05*root.width, 12*root.font_ratio, 0.05*root.width, 40*root.font_ratio)
