#:kivy 2.2.1

<QuestsScreen>:

    # Quests scrollview
    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "center_y":0.44}
        size_hint: (0.98,0.63)
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing:40
            height:0.25 * root.height * root.number_quests * 1.08
            padding: (0.05*root.width, 10,0.05*root.width,40)
