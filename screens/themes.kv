#:kivy 2.2.1
#:import THEMES_DICT tools.constants.THEMES_DICT

<ThemesScreen>:

    # Coins counter
    CoinsCounter:
        size_hint: (0.6, 0.07)
        pos_hint: {"center_x":0.5, "center_y":0.81}
        font_ratio: root.font_ratio
        coins_count: root.coins_count
        release_function: root.go_to_boosters

    # Theme scrollview
    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "center_y":0.44}
        size_hint: (0.98,0.63)
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing:40
            height:0.2*root.height * len(THEMES_DICT)*1.08
            padding: (0.05*root.width, 10,0.05*root.width,40)
