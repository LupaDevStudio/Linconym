        id: scrollview
        pos_hint: {"center_x":0.5, "center_y":0.475}
        size_hint: (1,0.7)
        do_scroll_x: False

        
        
        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing:40
