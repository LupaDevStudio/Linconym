#:kivy 2.2.1

<CustomizationScreen>:

    SideImageButton:
        size_hint: (0.65,0.1)
        pos_hint: {"center_x":0.5, "center_y":0.6}
        text:"Themes"
        font_size: root.font_ratio * MAIN_BUTTON_FONT_SIZE
        side_image_source: PATH_ICONS + "paint.png"
        release_function: root.open_themes_screen

    SideImageButton:
        size_hint: (0.65,0.1)
        pos_hint: {"center_x":0.5, "center_y":0.45}
        text:"Musics"
        font_size: root.font_ratio * MAIN_BUTTON_FONT_SIZE
        side_image_source: PATH_ICONS + "musical_note.png"
        release_function: root.open_musics_screen