#:kivy 2.2.1
#:import USER_DATA tools.constants.USER_DATA
#:import PATH_BADGES tools.path.PATH_BADGES

<SettingsScreen>:
    Label:
        text: "Settings"
        font_name: PATH_TITLE_FONT
        font_size: TITLE_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.9}
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR

    BottomBar:
        size_hint: (1, BOTTOM_BAR_HEIGHT)
        pos_hint: {"bottom":0,"left":0}
        selected: "settings"

    Label:
        text: "Music volume"
        font_name: PATH_TITLE_FONT
        font_size: 20 * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.8}
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR

    CustomSlider:
        id: music_slider
        min: 0
        max: 1
        value: USER_DATA.settings["music_volume"]
        slider_value: 0.5
        size_hint: (0.7, 0.06)
        pos_hint: {"center_x":0.5, "center_y":0.74}

    Label:
        text: "Sound effects volume"
        font_name: PATH_TITLE_FONT
        font_size: 20 * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.65}
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR

    CustomSlider:
        id: sound_slider
        min: 0
        max: 1
        value: USER_DATA.settings["sound_volume"]
        size_hint: (0.7, 0.06)
        pos_hint: {"center_x":0.5, "center_y":0.59}

    CustomContentButton:
        size_hint: (0.8,0.2)
        pos_hint: {"center_x":0.5, "center_y":0.425}
        font_ratio: root.font_ratio
        title:"Credits"
        content:"This game has been developed by LupaDevStudio.\n\nClick here to see the full credits list."
        release_function: root.open_credits

    SideImageButton:
        size_hint: (0.8,0.1)
        pos_hint: {"center_x":0.5, "center_y":0.24}
        text: "Visit our website"
        side_image_source: PATH_IMAGES + "lupa_logo.png"
        font_ratio: root.font_ratio
        release_function: root.open_lupa_website

    Label:
        text: root.version_text
        font_name: PATH_TITLE_FONT
        font_size: 17 * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.15}
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
