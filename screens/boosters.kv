#:kivy 2.2.1

<BoostersScreen>:

    # Coins counter
    CoinsCounter:
        size_hint: (0.4, 0.07)
        pos_hint: {"center_x":0.5, "center_y":0.81}
        font_ratio: root.font_ratio
        coins_count: root.coins_count
        display_plus: False
        disable_button: True

    # Ads boosters
    BoosterLayout:
        mode: "ads"
        booster_title: "Watch ads videos"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        size_hint: 0.8, 0.25
        list_ads_buy: root.list_ads
        font_ratio: root.font_ratio

    # Buy boosters
    BoosterLayout:
        mode: "buy"
        booster_title: "Purchases"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        size_hint: 0.8, 0.25
        list_ads_buy: root.list_buy
        font_ratio: root.font_ratio
