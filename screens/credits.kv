#:kivy 2.2.1

<CreditsScreen>:

    # Musics scrollview
    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "y":0.125}
        size_hint: (0.98,0.7)
        bar_width: 7*root.font_ratio
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing:20
            height:0.1*root.height*root.number_lines_credits*1.08
            padding: (0.05*root.width, 10,0.05*root.width,40)
