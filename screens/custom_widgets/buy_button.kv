#:kivy 2.2.1

<BuyButton>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0,0)
            size:self.size
            radius:[20,]

    # Button title
    Label:
        text: root.button_title
        pos_hint: { "center_x":0.5,"center_y":0.8}
        size_hint: (1,0.7)
        text_size: (root.width*0.8,None)
        font_size: root.font_ratio * root.font_size
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        color: (0,0,0,1)
