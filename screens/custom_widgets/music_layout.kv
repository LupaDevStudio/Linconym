#:kivy 2.2.1

<MusicLayout>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0, 0)
            size: self.size
            radius:[self.radius * self.font_ratio]


    # Play pause button
    RoundedButtonImage:
        image_path: PATH_IMAGES + "pause.png" if root.is_playing else PATH_IMAGES + "play.png"
        size_hint: None, 0.7
        width: self.width
        pos_hint: {"x": 0.05, "center_y": 0.5}
        colors: root.primary_color
        background_color: (0, 0, 0, 0)
        release_function: root.play_sound

    # Music title
    Label:
        text: root.music_title
        pos_hint: {"x":0.2,"center_y":0.5}
        size_hint: 1, 1
        font_size: root.font_ratio * root.font_size
        font_name: root.text_font_name
        color: (0,0,0,1)

    # Buy button

    # Select music button
