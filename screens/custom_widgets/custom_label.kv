#:kivy 2.2.1

<CustomLabel>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:[40,]

    # Title
    Label:
        text: root.title
        pos: (root.pos[0], root.pos[1]*1.25)
        size: (root.size[0], 0.4*root.size[1])
        shorten: False
        text_size: (root.width*root.text_filling_ratio,self.size[1])
        font_size: root.parent.font_ratio * root.font_size_title
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        line_height: 1
        color: (0,0,0,1)

    # Content
    Label:
        text: root.content
        font_size: root.parent.font_ratio * root.font_size_content
        pos_hint: {"center_x":0.5, "center_y":0.35}
        size_hint: (1, 0.7)
        shorten: False
        text_size: (root.width*root.text_filling_ratio,None)
        padding_y: 10
        font_name: root.text_font_name
        line_height: 1
        color: (0,0,0,1)
