#:kivy 2.2.1

<ActButton>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0,0)
            size:self.size
            radius:[40,]

    # Act title
    Label:
        id: act_title_label
        text: root.act_title
        pos_hint: {"center_x":0.5, "center_y":0.8}
        size: (1,0.5)
        font_size: root.parent.font_ratio * root.font_size
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        color: (0,0,0,1)

    # Stars
    ThreeStars:
        id: three_stars
        pos_hint: {"center_x":0.35, "center_y":0.25}
        size_hint: (0.5,0.5)
        stars_number: root.stars_number

    # Completion
    Label:
        id: completion_label
        text: root.completion_text
        pos_hint: {"center_x":0.8, "center_y":0.25}
        size_hint: (0.3,0.5)
        font_size: root.parent.font_ratio * root.font_size
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        color: (0,0,0,1)
