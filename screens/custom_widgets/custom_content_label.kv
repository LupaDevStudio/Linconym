#:kivy 2.2.1

<CustomContentLabel>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0,0)
            size:self.size
            radius:[40,]

    # Title
    Label:
        text: root.title
        pos_hint: {"center_x":0.5, "center_y":0.75}
        size_hint: (1, None)
        shorten: False
        text_size: (root.width*root.text_filling_ratio,self.size[1])
        font_size: root.font_ratio * root.font_size_title
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        line_height: 1
        color: (0,0,0,1)

    # Content
    Label:
        text: root.content
        font_size: root.font_ratio * root.font_size_content
        pos_hint: {"center_x":0.5, "center_y":0.35}
        size_hint: (1, None)
        shorten: False
        text_size: (root.width*root.text_filling_ratio,None)
        font_name: root.text_font_name
        line_height: 1
        color: (0,0,0,1)
