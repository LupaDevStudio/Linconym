#:kivy 2.2.1

<BottomBar>:

    canvas.before:
        # Background
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

        # Separation bar
        Color:
            rgba: self.separation_color
        Rectangle:
            pos: (0,self.height)
            size: (self.width, self.separation_height)

    Image:
        id: selected_cursor
        source: PATH_ICONS + "cursor.png"
        pos_hint: root.selected_rect_pos
        fit_mode: "contain"
        size_hint: root.selected_rect_size
        color: root.selected_color
        
    # Home button
    ImageButton:
        id: home_button
        source: PATH_ICONS + "home.png"
        size_hint: root.button_width, root.button_height
        pos_hint: {"center_x":0.125, "center_y":0.5}
        release_function: root.open_home

    # Customization button
    ImageButton:
        id: customization_button
        source: PATH_ICONS + "customization.png"
        size_hint: root.button_width, root.button_height
        pos_hint: {"center_x":0.375, "center_y":0.5}
        release_function: root.open_customization

    # Profile button
    ImageButton:
        id: profile_button
        source: PATH_ICONS + "profile.png"
        size_hint: root.button_width, root.button_height
        pos_hint: {"center_x":0.625, "center_y":0.5}
        release_function: root.open_profile

    # Settings button
    ImageButton:
        id: settings_button
        source: PATH_ICONS + "settings.png"
        size_hint: root.button_width, root.button_height
        pos_hint: {"center_x":0.875, "center_y":0.5}
        release_function: root.open_settings
