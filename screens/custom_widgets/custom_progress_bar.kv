#:kivy 2.2.1

<CustomProgressBar>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos:self.pos
            size:self.size
        Color:
            rgba: self.main_color
        Rectangle:
            pos:self.pos
            size:(self.size[0]*self.value, self.size[1])
