#:kivy 2.2.1

<SelectCircleButton>:

    # Circle
    Widget:
        id: selection_circle
        size: root.size
        pos: (0,0)
        canvas.before:
            Color:
                rgba: (0,0,0,1)
            Line:
                circle: root.width//2, root.height//2, root.height//2
                width: BUTTON_OUTLINE_WIDTH*root.font_ratio

    # Check image
    Image:
        id: activated_image
        opacity: 1 if root.is_using else 0
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size_hint: (0.8,0.8)
        source: PATH_IMAGES + "check.png"
        fit_mode: "contain"
