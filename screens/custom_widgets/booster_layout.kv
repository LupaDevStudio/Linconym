#:kivy 2.2.1
#:set AMOUNT_FONT_SIZE 15

<BoosterLayout>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0,0)
            size:self.size
            radius:[40,]


    # Booster title
    Label:
        text: root.booster_title
        pos_hint: {"center_x":0.5,"center_y":0.85}
        size_hint: (0.8,0.2)
        font_size: root.font_ratio * root.font_size * 1.3
        text_size: (self.width,None)
        font_name: root.text_font_name
        color: (0,0,0,1)
        halign: "center"
        valign: "center"

    # First circle
    RoundButton:
        id: first_circle
        pos_hint: {"center_x":0.2, "center_y":0.475}
        size_hint: (None,0.4)
        width: self.height
        color: root.first_color
        disable_button: root.first_disable
        line_width: 2
        text: root.first_text
        font_ratio: root.font_ratio
    Label:
        text: root.first_amount_text
        pos_hint: {"center_x":0.12, "center_y": 0.15}
        size_hint: (0.2, 0.1)
        text_size: (self.size[0],None)
        color: (0,0,0,1)
        font_name: PATH_TITLE_FONT
        font_size: root.font_ratio * AMOUNT_FONT_SIZE
        halign: "right"
    Image:
        source: PATH_IMAGES + "coins.png"
        pos_hint: {"x":0.23,"center_y":0.15}
        size_hint: (None,0.1)
        width: self.height
        fit_mode: "contain"

    # Second circle
    RoundButton:
        id: second_circle
        pos_hint: {"center_x":0.5, "center_y":0.475}
        size_hint: (None,0.4)
        width: self.height
        color: root.second_color
        disable_button: root.second_disable
        line_width: 2
        text: root.second_text
        font_ratio: root.font_ratio
    Label:
        text: root.second_amount_text
        pos_hint: {"center_x":0.42, "center_y": 0.15}
        size_hint: (0.2, 0.1)
        text_size: (self.size[0],None)
        color: (0,0,0,1)
        font_name: PATH_TITLE_FONT
        font_size: root.font_ratio * AMOUNT_FONT_SIZE
        halign: "right"
    Image:
        source: PATH_IMAGES + "coins.png"
        pos_hint: {"x":0.53,"center_y":0.15}
        size_hint: (None,0.1)
        width: self.height
        fit_mode: "contain"

    # Third circle
    RoundButton:
        id: third_circle
        pos_hint: {"center_x":0.8, "center_y":0.475}
        size_hint: (None,0.4)
        width: self.height
        color: root.third_color
        disable_button: root.third_disable
        line_width: 2
        text: root.third_text
        font_ratio: root.font_ratio
    Label:
        text: root.third_amount_text
        pos_hint: {"center_x":0.72, "center_y": 0.15}
        size_hint: (0.2, 0.1)
        text_size: (self.size[0],None)
        color: (0,0,0,1)
        font_name: PATH_TITLE_FONT
        font_size: root.font_ratio * AMOUNT_FONT_SIZE
        halign: "right"
    Image:
        source: PATH_IMAGES + "coins.png"
        pos_hint: {"x":0.83,"center_y":0.15}
        size_hint: (None,0.1)
        width: self.height
        fit_mode: "contain"
