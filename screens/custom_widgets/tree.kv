#:kivy 2.2.1

<TreeScrollview>:
    bar_margin: 0
    bar_width: 6
    scroll_type:['bars', 'content']
    do_scroll_x: True
    do_scroll_y: True

    canvas.after:
        Color:
            rgba: (0,0,0,0.5)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (1,1,1,1)
        Line:
            points: [self.pos[0],self.pos[1]-3,self.pos[0] + self.width,self.pos[1]-3]
            width: 2
        Line:
            points: [self.pos[0],self.pos[1]+self.height,self.pos[0] + self.width,self.pos[1]+self.height]
            width: 2

<TreeLayout>:

    