#:kivy 2.2.1
#:import MAIN_BUTTON_FONT_SIZE tools.constants.MAIN_BUTTON_FONT_SIZE

<ColoredRoundedButton>:

    # Background
    canvas.before:
        # Shadow
        Color:
            rgba: (0, 0, 0, 1) if not self.disable_button else (0,0,0,0)
        BoxShadow:
            pos: (0, 0)
            size: self.size
            offset: 5, -5
            spread_radius: -10, -10
            blur_radius: 30
        # Rounded rectangle
        Color:
            rgba: root.background_color
        RoundedRectangle:
            pos:(0, 0)
            size:self.size

    # Main text
    Label:
        text: root.text
        font_size: root.font_ratio * MAIN_BUTTON_FONT_SIZE
        pos: (1*root.font_ratio,0)
        size: self.size
        shorten: False
        text_size: (root.width*root.text_filling_ratio,None)
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        line_height: 1
        color: (1,1,1,1)


<TreeScrollview>:
    bar_margin: 0
    bar_width: 6
    scroll_type:['bars', 'content']
    do_scroll_x: True
    do_scroll_y: True

    canvas.after:
        Color:
            rgba: (0,0,0,0.5)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (1,1,1,1)
        Line:
            points: [self.pos[0],self.pos[1]-3,self.pos[0] + self.width,self.pos[1]-3]
            width: 2
        Line:
            points: [self.pos[0],self.pos[1]+self.height,self.pos[0] + self.width,self.pos[1]+self.height]
            width: 2

<TreeLayout>:
